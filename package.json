{
  "version": "0.0.4",
  "name": "based",
  "displayName": "Based",
  "description": "A based vscode extension for Flutter.",
  "publisher": "CierraRunis",
  "author": {
    "name": "Cierra_Runis",
    "url": "https://github.com/Cierra-Runis/"
  },
  "homepage": "https://github.com/Cierra-Runis/based_vscode_extension",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Cierra-Runis/based_vscode_extension/issues"
  },
  "repository": {
    "type": "github",
    "url": "https://github.com/Cierra-Runis/based_vscode_extension"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "icon": "./assets/icon.png",
  "keywords": [
    "Dart",
    "Flutter",
    "pubspec"
  ],
  "files": [
    "./assets"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/pubspec.yaml",
    "onCommand:*"
  ],
  "main": "./out/main.js",
  "contributes": {
    "configuration": {
      "title": "Based",
      "properties": {
        "based.config.showTip": {
          "type": "boolean",
          "default": false,
          "description": "显示提示"
        }
      }
    },
    "snippets": [
      {
        "language": "dart",
        "path": "./src/snippets/freezed.json"
      },
      {
        "language": "dart",
        "path": "./src/snippets/persistence.json"
      },
      {
        "language": "dart",
        "path": "./src/snippets/riverpod.json"
      }
    ],
    "commands": [
      {
        "command": "based.addDependencies",
        "title": "Based: Add Dependencies"
      },
      {
        "command": "based.create",
        "title": "Based: Create..."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn run esbuild-base -- --sourcemap",
    "esbuild-watch": "yarn run esbuild-base -- --sourcemap --watch",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "yaml": "^2.3.4"
  }
}