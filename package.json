{
  "name": "based",
  "displayName": "based",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Snippets",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:**/pubspec.yaml",
    "onCommand:*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "snippets": [
      {
        "language": "dart",
        "path": "./src/snippets/freezed.json"
      },
      {
        "language": "dart",
        "path": "./src/snippets/persistence.json"
      },
      {
        "language": "dart",
        "path": "./src/snippets/riverpod.json"
      }
    ],
    "commands": [
      {
        "command": "based.addDependencies",
        "title": "Based: Add Dependencies"
      },
      {
        "command": "based.create",
        "title": "Based: Create..."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  }
}